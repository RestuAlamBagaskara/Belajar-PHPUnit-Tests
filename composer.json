{
    "name": "alambagaskara/belajar-php-unit",
    "description": "Belajar PHP Unit Testing",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Alambagaskara\\BelajarPhpUnit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Alambagaskara\\BelajarPhpUnit\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "RestuAlamBagaskara",
            "email": "alambagaskara18@gmail.com"
        }
    ],
    "require": {
        "php" : ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "9.5.21"
    },

    "scripts": {
        "tests" : "phpunit --configuration phpunit.xml",
        "test:product" : "phpunit --configuration phpunit.xml --testsuite product",
        "test:counter" : "phpunit --configuration phpunit.xml --testsuite counter"
    }
}
